{{>layouts/header}}

<div class="container">
    <h2 class="text-center my-4">연락처 검색</h2>

    <!-- 검색 폼 -->
    <div class="d-flex justify-content-between mb-4">
        <form action="/members/Aname" method="get" class="d-flex w-50">
            <input type="text" name="name" class="form-control me-2" placeholder="이름을 입력하세요" required />
            <button type="submit" class="btn btn-outline-primary">🔍 검색</button>
        </form>
    </div>

    <!-- 검색 결과 테이블 -->
    <table class="contact-table">
        <thead class="thead-dark">
        <tr>
            <th>이름</th>
            <th>전화번호</th>
            <th>주소</th>
            <th>그룹</th>
            <th>관리</th>
        </tr>
        </thead>
        <tbody>
        {{#contacts}}
            <tr>
                <td>{{name}}</td>
                <td>{{phoneNumber}}</td>
                <td>{{address}}</td>
                <td>{{moimName}}</td>
                <td>
                    <button class="btn btn-warning btn-sm" onclick="location.href='/members/update/{{contactId}}'">✏ 수정</button>
                    <button class="btn btn-danger btn-sm" onclick="deleteContact('{{contactId}}')">🗑 삭제</button>
                </td>
            </tr>
        {{/contacts}}
        {{^contacts}}
            <tr>
                <td colspan="5" class="text-center">검색 결과가 없습니다.</td>
            </tr>
        {{/contacts}}
        </tbody>
    </table>
    <!-- 연락처 추가 및 취소 버튼 -->
    <div class="d-flex justify-content-end mb-4">
        <button class="btn btn-success me-2" onclick="location.href='/members/addContact'">+ 연락처 추가</button>
        <button class="btn btn-secondary" onclick="location.href='/members/Acontacts'">취소</button>
    </div>
</div>

<script>
    function deleteContact(contactId) {
        if (confirm("정말 삭제하시겠습니까?")) {
            location.href = "/members/deleteContact?contactId=" + contactId;
        }
    }
</script>

{{>layouts/footer}}

<!-- 스타일 추가 -->
<style>
    .container {
        max-width: 1200px;
        margin: 50px auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-size: 2.5em;
        color: #333;
    }

    .form-control {
        width: 70%;
        padding: 12px;
        font-size: 1.1em;
        border-radius: 5px;
        border: 1px solid #ccc;
        background-color: #fff;
    }

    .btn {
        padding: 12px 25px;
        font-size: 1.1em;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
        background-color: transparent;
    }

    .btn-outline-primary:hover {
        background-color: #007bff;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
        border: none;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 0.9em;
    }

    .contact-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .contact-table th, .contact-table td {
        padding: 12px;
        text-align: center;
        border: 1px solid #ddd;
    }

    .contact-table th {
        background-color: #007bff;
        color: white;
    }

    .contact-table tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .contact-table tr:hover {
        background-color: #f1f1f1;
    }

    .thead-dark {
        background-color: #343a40;
        color: white;
    }

    .btn-warning {
        background-color: #ffc107;
        color: white;
        border: none;
    }

    .btn-warning:hover {
        background-color: #e0a800;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
        border: none;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }
</style>
